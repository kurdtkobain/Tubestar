<UserControl x:Class="TubeStar.SelectButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" >
    
    <ToggleButton x:Name="btnToggle" Margin="5" Click="Button_Click" FontWeight="Normal">
        <Grid>
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90*"/>
                        <ColumnDefinition Width="10*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="txtButtonText" Grid.Column="0" FontSize="18" Text="" FontWeight="Bold" TextWrapping="Wrap"></TextBlock>
                    <TextBlock x:Name="txtPoints" Grid.Column="1" FontSize="18" HorizontalAlignment="Right" VerticalAlignment="Top" Text=""></TextBlock>
                </Grid>
                <TextBlock x:Name="txtDetails" FontSize="14" Text="" TextWrapping="Wrap"></TextBlock>
            </StackPanel>
        </Grid>
    </ToggleButton>
</UserControl>
