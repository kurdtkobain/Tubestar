<UserControl x:Class="TubeStar.AppointmentBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Height="30"
             Padding="2"
             MouseEnter="UserControl_MouseEnter"
             MouseLeave="UserControl_MouseLeave">

    <Grid x:Name="appointmentGrid" Grid.Column="1" MouseLeftButtonDown="AppointmentBorder_MouseLeftButtonDown">
        <StackPanel Orientation="Horizontal">
            <TextBlock x:Name="txtTime" Text="10:00 AM" FontSize="12" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="WhiteSmoke" Width="80" />
            <TextBlock x:Name="appointmentTextBlock" Text="Blah Blah" HorizontalAlignment="Left" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="WhiteSmoke" />
        </StackPanel>
    </Grid>
</UserControl>