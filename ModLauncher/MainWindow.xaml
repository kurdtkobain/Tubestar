<Window x:Class="ModLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TubeStar MOD Launcher" Height="280" Width="525"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Icon="TubeStar.ico">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <TextBlock x:Name="lblRivalMod" Grid.Row="2" Text="Top TubeStars MOD: " Margin="5,2,5,2" FontSize="14" />
            <ComboBox x:Name="cmbRivalMod" Grid.Row="3" FontSize="16" VerticalAlignment="Center" Margin="5,0,5,5" />
            <Button Click="Button_Click">
                <Button.Content>
                    <StackPanel>
                        <Image Source="TubeStar.png" Height="100" />
                        <TextBlock Text="LAUNCH" HorizontalAlignment="Center" FontSize="40" />
                    </StackPanel>
                </Button.Content>
            </Button>
        </StackPanel>
    </Grid>
</Window>